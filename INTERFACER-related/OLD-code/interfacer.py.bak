def invert_axis(slab,axis):
	#flips the sign of one of the slabs axis
	#scaled coords adjusted accordingly
	sp = slab.get_scaled_positions()
	sp2 = []
	for line in sp:
		l2 = [x for x in line]
		l2[axis] = 1-l2[axis]
		sp2.append(l2)
	slab.cell[axis] = -slab.cell[axis]
	slab.set_scaled_positions(sp2)
	return slab

